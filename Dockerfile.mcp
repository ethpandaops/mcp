# Dockerfile for the MCP server
# Build: docker build -f Dockerfile.mcp -t ethpandaops-mcp .

# Build stage
FROM golang:1.24-alpine AS builder

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache git ca-certificates

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Stage embedding models if present to keep COPY optional.
RUN mkdir -p /app/models /app/models-output && \
    if ls /app/models/*.gguf >/dev/null 2>&1; then \
        cp /app/models/*.gguf /app/models-output/; \
    fi

# Build the MCP binary
ARG VERSION=dev
ARG GIT_COMMIT=unknown
ARG BUILD_TIME=unknown

RUN CGO_ENABLED=0 GOOS=linux go build \
    -ldflags "-s -w \
        -X github.com/ethpandaops/mcp/internal/version.Version=${VERSION} \
        -X github.com/ethpandaops/mcp/internal/version.GitCommit=${GIT_COMMIT} \
        -X github.com/ethpandaops/mcp/internal/version.BuildTime=${BUILD_TIME}" \
    -o /ethpandaops-mcp ./cmd/mcp

# Runtime stage
FROM alpine:3.20

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache ca-certificates tzdata

# Copy binary from builder
COPY --from=builder /ethpandaops-mcp /usr/local/bin/ethpandaops-mcp

# Copy embedding model (if available)
COPY --from=builder /app/models-output/ /usr/share/mcp/

# Create non-root user
RUN addgroup -g 1000 mcp && \
    adduser -u 1000 -G mcp -D mcp

USER mcp

# Expose MCP port
EXPOSE 2480

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:2480/health || exit 1

ENTRYPOINT ["ethpandaops-mcp"]
CMD ["serve"]
